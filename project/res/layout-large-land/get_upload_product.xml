<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3" >

    <!-- all details -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="2" >

        <!-- all fields -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/get_upload_product_activity_seller_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/get_upload_product_activity_seller_name"
                android:textSize="18sp" >
            </TextView>

            <EditText
                android:id="@+id/get_upload_product_activity_enter_seller_name"
                android:layout_width="fill_parent"
                android:layout_height="27dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/get_border"
                android:gravity="center"
                android:height="20sp"
                android:inputType="textPersonName"
                android:textSize="18sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/get_upload_product_activity_seller_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/get_upload_product_activity_seller_number"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/get_upload_product_activity_enter_seller_number"
                android:layout_width="fill_parent"
                android:layout_height="27dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/get_border"
                            android:gravity="center"
                
                android:height="20dp"
                android:inputType="phone"
                android:textSize="18sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/get_upload_product_activity_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/get_upload_product_activity_product_name"
                android:textSize="18sp" >
            </TextView>

            <EditText
                android:id="@+id/get_upload_product_activity_enter_product_name"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/get_border"
                            android:gravity="center"
                
                android:textSize="18sp" 
                android:singleLine="true"/>

            <TextView
                android:id="@+id/get_upload_product_activity_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="@string/get_upload_product_activity_price"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/get_upload_product_activity_enter_price"
                android:layout_width="fill_parent"
                android:layout_height="27dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/get_border"
                android:inputType="numberDecimal"
                            android:gravity="center"
                
                android:textSize="18sp" 
                android:singleLine="true"/>
            
             <TextView
            android:id="@+id/get_upload_product_activity_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/get_upload_product_activity_description"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/get_upload_product_activity_enter_description"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/get_border"
            android:gravity="center_horizontal"
            android:textSize="18sp" >
        </EditText>
            
        </LinearLayout>

        <!-- upload photo -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/get_upload_product_img"
                android:layout_width="275dp"
                android:layout_height="250dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:background="@drawable/get_border"
                android:clickable="true" />

            <TextView
                android:id="@+id/get_upload_product_activity_img_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:text="@string/get_upload_product_activity_img_btn"
                android:textSize="13sp" />

            <Spinner
                android:id="@+id/get_upload_product_activity_category_spinner"
                android:layout_width="275dp"
                android:layout_height="35dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:layout_marginTop="27dp"
                android:background="@drawable/get_upload_product_spinner"
                android:entries="@array/Categories_Spinner"
                android:prompt="@string/get_upload_product_activity_category_spinner"
                android:spinnerMode="dropdown" />
            
            <Button
            android:id="@+id/get_upload_product_activity_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="#3ADF00"
            android:text="@string/get_upload_product_activity_button"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>