<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_product_list_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/get_product_list_layout_image"
        android:layout_width="0dip"
        android:layout_height="100dip"
        android:src="@drawable/get_actionbar_menu_logo" 
        android:scaleType="centerInside"
        android:layout_marginLeft="20dip"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="100dip"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/get_prodcut_list_layout_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />

        <TextView
            android:id="@+id/get_prodcut_list_layout_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>