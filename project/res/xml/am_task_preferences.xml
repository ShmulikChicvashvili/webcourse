<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory
        android:key="am_task_pref_task_info"
        android:title="@string/am_task_pref_task_info" >
        <EditTextPreference
            android:defaultValue=""
            android:key="am_task_pref_task_name"
            android:summary="@string/am_task_pref_task_name_sum"
            android:title="@string/am_task_pref_task_name" />
        <EditTextPreference
            android:defaultValue=""
            android:key="am_task_pref_course_name"
            android:summary="@string/am_task_pref_course_name_sum"
            android:title="@string/am_task_pref_course_name" />
        <EditTextPreference
            android:defaultValue=""
            android:inputType="number"
            android:key="am_task_pref_course_id"
            android:summary="@string/am_task_pref_course_id_sum"
            android:title="@string/am_task_pref_course_id" />

        <com.technion.coolie.assignmentor.DatePreference
            android:defaultValue="1"
            android:key="am_task_pref_due_date"
            android:summary="@string/am_task_pref_due_date_sum"
            android:title="@string/am_task_pref_due_date" />
    </PreferenceCategory>
    <PreferenceCategory
        android:key="am_task_pref_properties_title"
        android:title="@string/am_task_pref_properties_title" >

        <!-- Will host some of the task's properties. added at runtime. -->

    </PreferenceCategory>
    <PreferenceCategory
        android:key="am_task_pref_reminder_title"
        android:title="@string/am_pref_reminder_title" >
        <ListPreference
            android:defaultValue="@string/am_pref_reminder_default_value"
            android:dialogTitle="@string/am_pref_reminder_dialog_title"
            android:entries="@array/am_pref_reminder_dialog_values"
            android:entryValues="@array/am_pref_reminder_dialog_values"
            android:key="am_task_pref_reminder"
            android:summary="@string/am_pref_reminder_default_value"
            android:title="@string/am_task_pref_reminder" />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/am_task_pref_extra_info_title" >
        <Preference
            android:key="am_task_pref_course_website"
            android:title="@string/am_task_pref_course_website" >
        </Preference>
    </PreferenceCategory>

</PreferenceScreen>