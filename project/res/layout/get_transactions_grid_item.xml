<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="8dp" 
    >

    <ImageView
        android:id="@+id/get_transactions_grid_item_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:src="@drawable/skel_main" >
    </ImageView>

    <TextView
        android:id="@+id/get_transactions_grid_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/get_transactions_grid_item_image"
        android:layout_alignLeft="@id/get_transactions_grid_item_image"
        android:background="#000000"
        android:padding="4dp"
        android:text="this is the product name"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/get_transactions_grid_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/get_transactions_grid_item_image"
        android:layout_alignRight="@id/get_transactions_grid_item_image"
        android:background="#000000"
        android:padding="4dp"
        android:text="15/05/2013"
        android:textColor="#ffffff" />

</RelativeLayout>