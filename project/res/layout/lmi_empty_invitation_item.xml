<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:onClick="emptyStateListAction" >

    <ImageView
        android:id="@+id/lmi_add"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/lmi_invite_contact"
        android:scaleType="fitXY"
        android:src="@drawable/lmi_plus" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lmi_add"
        android:layout_centerHorizontal="true"
        android:text="@string/lmi_empty_list_message"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>