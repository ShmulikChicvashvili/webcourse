<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/categoryImageView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:src="@drawable/ji_sports_icon" />

    <TextView
        android:id="@+id/categoryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/categoryImageView"
        android:layout_toRightOf="@id/categoryImageView"
        android:text="@string/com_facebook_loading"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/categoryDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/categoryImageView"
        android:layout_below="@id/categoryNameText"
        android:layout_toRightOf="@id/categoryImageView"
        android:text="@string/com_facebook_loading"
        android:textColor="#0A72AF"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/CategoryCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/categoryNumEvents"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/small_blue_circle"
        android:gravity="center|center_vertical"
        android:textAlignment="center"
        android:textColor="#0A72AF"
        android:textSize="12sp" />

</RelativeLayout>