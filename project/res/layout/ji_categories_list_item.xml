<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/categoryImageView"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ji_sports_icon"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/categoryNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/categoryImageView"
        android:layout_toRightOf="@id/categoryImageView"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/CategoryCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/categoryNumEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/CategoryCircle"
        android:layout_alignTop="@+id/CategoryCircle"
        android:layout_alignRight="@+id/CategoryCircle"
        android:layout_alignBottom="@+id/CategoryCircle"
        android:layout_margin="1dp"
        android:gravity="center"/>

</RelativeLayout>