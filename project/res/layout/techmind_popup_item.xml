<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dip"
    android:weightSum="1"
    android:baselineAligned="false"
    android:id="@+id/list_item_post" >
    
    <LinearLayout
        android:id="@+id/popup_item_date"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/techmind_date"
        android:layout_weight="0.2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/popup_item_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popup_item_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="#ff8800"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0.8"
	    android:paddingLeft="10sp"
	    android:paddingRight="5sp"
	    android:orientation="vertical" >
        
	    <TextView 
		    android:id="@+id/tv_popup_item_content"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:maxLines="2"
		    android:ellipsize="end"  />
	    <TextView 
		    android:id="@+id/tv_popup_item_group"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:maxLines="1"
		    android:ellipsize="end" />
		
	        
    </LinearLayout>
        
</LinearLayout>
