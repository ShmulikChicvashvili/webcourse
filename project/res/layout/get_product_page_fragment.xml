<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/get_prodcut_page_layout_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/get_product_page_fragment_name"
                android:layout_width="match_parent"
                android:layout_marginTop="8dip"
                android:textStyle="bold"
                android:textSize="18dip"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <ImageView
                android:id="@+id/get_product_page_fragment_image"
                android:layout_width="match_parent"
                android:layout_height="200dip"
                android:gravity="center"
                android:scaleType="centerInside"
                android:src="@drawable/get_actionbar_menu_logo" />

            <TextView
                android:id="@+id/get_product_page_fragment_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dip"
                android:textSize="18dip"                
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/get_product_page_fragment_sms_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_transactions_fragment_sms" />

            <Button
                android:id="@+id/get_product_page_fragment_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_transactions_fragment_call" />

            <Button
                android:id="@+id/get_product_page_fragment_buy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/get_product_buy_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/get_product_page_fragment_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="8sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/get_product_page_fragment_description_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="8sp"
                android:layout_marginTop="4sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>