<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    
    <RelativeLayout android:background="#112f" 
        android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dip"
          android:layout_marginRight="10dip"
          android:layout_marginLeft="10dip">
        


	<LinearLayout
	    android:id="@+id/course_screen_view_headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
         > 

         <TextView
            android:id="@+id/course_screen_name"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="default for debug" 
            android:background="@drawable/course_text_container"
             android:layout_marginRight="10dip"
            android:layout_weight="6"
            />
        
        
        <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2" > 
        
           
       

        <TextView
            android:id="@+id/course_screen_number"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="233232" 
            android:background="@drawable/course_text_container"
            android:layout_weight="1"
            
            />
        
         <TextView
            android:id="@+id/course_screen_points"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="4.0" 
            android:background="@drawable/course_text_container"
            android:layout_weight="1"
            android:layout_gravity="right"
            
            />
        
        </LinearLayout>
</LinearLayout>

	<TextView
            android:id="@+id/course_screen_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a description for the world to see the greatness in itself" 
            android:background="@drawable/course_text_container"
            android:layout_below="@id/course_screen_view_headline"
            
            />
	<TextView
            android:id="@+id/course_screen_exams"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" מועד א:231323  מועד ב: 12323" 
            android:background="@drawable/course_text_container"
            android:layout_below="@id/course_screen_description"
            
            />
	
	<ListView 
	    android:id="@+id/search_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/course_screen_exams"
        android:background="#525f" />

	    </RelativeLayout>
</RelativeLayout>