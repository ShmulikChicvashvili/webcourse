<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp" >

    <!-- name,price,category,description,image,publish date,seller phone -->

    <TextView
        android:id="@+id/get_transactions_my_products_fragment_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="Product Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_transactions_my_products_fragment_product_name"
        android:layout_below="@+id/get_transactions_my_products_fragment_product_name"
        android:text="@string/get_transactions_fragment_price_title" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:text="@string/get_transactions_fragment_category_title" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="@string/get_transactions_fragment_publish_date_title" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:text="@string/get_transactions_fragment_contact_phone_title" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView7"
        android:text="@string/get_transactions_fragment_description_title" />

    <TextView
        android:id="@+id/get_transactions_my_products_fragment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView7"
        android:layout_below="@+id/textView4"
        android:text="description content" />

    <TextView
        android:id="@+id/get_transactions_my_products_fragment_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="0.0" />

    <TextView
        android:id="@+id/get_transactions_my_products_fragment_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:text="category" />

    <TextView
        android:id="@+id/get_transactions_my_products_fragment_publish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:text="01/01/1970" />

    <TextView
        android:id="@+id/get_transactions_my_products_fragment_contact_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_toRightOf="@+id/textView7"
        android:text="9999999999" />

    <Button
        android:id="@+id/get_transactions_my_products_fragment_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/get_transactions_my_products_fragment_description"
        android:layout_below="@+id/get_transactions_my_products_fragment_description"
        android:text="@string/get_transactions_fragment_edit" />

    <Button
        android:id="@+id/get_transactions_my_products_fragment_remove_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/get_transactions_my_products_fragment_edit_button"
        android:layout_alignBottom="@+id/get_transactions_my_products_fragment_edit_button"
        android:layout_alignParentRight="true"
        android:text="@string/get_transactions_fragment_remove" />

</RelativeLayout>