<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
    <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#112f"
    android:layout_marginLeft="10dip"
    android:layout_marginRight="10dip"
    android:layout_marginTop="10dip"
     android:layout_marginBottom="10dip"
  >
  <ScrollView 
      android:layout_width="match_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:orientation="vertical" >
        
<RadioGroup
    android:id="@+id/course_screen_semester_radio_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    
  >

    <RadioButton 
            android:id="@+id/course_screen_lastsemester"
        	android:text="חורף"
        	 android:textColor="@color/abs__background_holo_dark"
        	
        	 android:layout_gravity="right"
        	
        />

    <RadioButton
            android:id="@+id/course_screen_secondlastsemester"
        	android:text="אביב"
        	 android:textColor="@color/abs__background_holo_dark"
        	 android:layout_gravity="center"
         />
     <RadioButton
            android:id="@+id/course_screen_threelastsemester"
        	android:text="קיץ"
        	 android:textColor="@color/abs__background_holo_dark"
        	 android:layout_gravity="right"
         />
    
</RadioGroup>
        

<TextView android:id="@+id/ug_course_screen_not_available_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="קורס לא נלמד בסמסטר" />

<LinearLayout
	    android:id="@+id/ug_course_screen_name_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:background="@drawable/ug_course_text_header_group_container"
        
         > 

<TextView
            android:id="@+id/course_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
			android:layout_toLeftOf="@+id/ug_course_screen_name_header"            
            />
<TextView
            android:id="@+id/ug_course_screen_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="שם קורס" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/course_screen_name"
            />
</LinearLayout>


<LinearLayout
	    android:id="@+id/ug_course_screen_number_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:background="@drawable/ug_course_text_header_group_container"
        
         > 

<TextView
            android:id="@+id/course_screen_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
            
            
            />
<TextView
            android:id="@+id/ug_course_screen_number_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="מספר קורס" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/course_screen_name"
            />
</LinearLayout>


	<LinearLayout
	    android:id="@+id/course_screen_view_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:layout_below="@id/course_screen_name"
         > 
         
	    <LinearLayout
	    android:id="@+id/ug_course_screen_faculty_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
        android:background="@drawable/ug_course_text_header_group_container"
        >
         <TextView
            android:id="@+id/course_screen_faculty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
            
            android:layout_gravity="right"
            
            />
         <TextView
            android:id="@+id/ug_course_screen_faculty_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="פקולטה" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignTop="@+id/course_screen_faculty"
            />
        </LinearLayout>
         
         <LinearLayout
	    android:id="@+id/ug_course_screen_points_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:background="@drawable/ug_course_text_header_group_container"
        >
         <TextView
            android:id="@+id/course_screen_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
            
            android:layout_gravity="right"
            
            />
         <TextView
            android:id="@+id/ug_course_screen_points_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="נק" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignTop="@+id/course_screen_points"
            />
        </LinearLayout>
         
         
         
        
        </LinearLayout>
        
         
        <LinearLayout
	    android:id="@+id/ug_course_screen_description_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:background="@drawable/ug_course_text_header_group_container"
        >

	<TextView
            android:id="@+id/course_screen_description"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
            
              android:layout_weight="16"
            />
	<TextView
            android:id="@+id/ug_course_screen_description_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="תיאור" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_weight="1"
            />
	</LinearLayout>
	
	 <LinearLayout
	     android:id="@+id/course_screen_exams_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right"
        android:layout_marginTop="3dip"
        
         > 
	
	      <LinearLayout
	    android:id="@+id/ug_course_screen_examb_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          
          android:layout_weight="1"
        android:background="@drawable/ug_course_text_header_group_container"
        >
	     
	     
	<TextView
            android:id="@+id/course_screen_exam_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
            
            
            
            />
	
	<TextView
            android:id="@+id/ug_course_screen_examb_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="מועד ב" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
           
            />
	</LinearLayout>
	
	       <LinearLayout
	    android:id="@+id/ug_course_screen_exama_headline"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
          android:layout_weight="1"
        android:background="@drawable/ug_course_text_header_group_container"
        >
	      
	<TextView
            android:id="@+id/course_screen_exam_a"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="" 
            android:background="@drawable/ug_course_text_container"
            
            
            />
	
	
	<TextView
            android:id="@+id/ug_course_screen_exama_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="מועד א" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
           
            />
	</LinearLayout>
	
	</LinearLayout>
	
	  <LinearLayout
	    android:id="@+id/ug_course_screen_kdamim_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        
          android:layout_marginTop="3dip"
          android:background="@drawable/ug_course_text_header_group_container"
       
        >
	
	 
	  <HorizontalScrollView 
    android:id="@+id/HorizontalScrollView02" 
    android:layout_height="fill_parent" 
    android:layout_width="0dp"
    android:scrollbars="horizontal|vertical"
       android:layout_weight="5" >
	<LinearLayout
        android:id="@+id/course_screen_list_tsmudim"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:divider="#FFCC00"
        android:dividerHeight="4dp"/>
     
	 </HorizontalScrollView>
	 
	  
	  <TextView
            android:id="@+id/ug_course_screen_tsmudim_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="צמודים" 
            android:textColor="#ffffff"
             android:layout_weight="2" 
            android:background="@drawable/ug_course_text_header_container"
           
            />
	  
	  
	   <HorizontalScrollView 
    android:id="@+id/HorizontalScrollView01" 
    android:layout_height="fill_parent" 
    android:layout_width="0dp"
    android:scrollbars="horizontal"
     android:layout_weight="5" >
	 
	 <LinearLayout
        android:id="@+id/course_screen_list_kdamim"
        android:layout_width="0dip"
        android:layout_height="fill_parent"
       android:orientation="horizontal"
        android:layout_marginRight="10dp"
        />
	 </HorizontalScrollView>
	 
	 <TextView
            android:id="@+id/ug_course_screen_kdamim_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="קדמים" 
            android:textColor="#ffffff"
             android:layout_weight="2" 
            android:background="@drawable/ug_course_text_header_container"
           
            />
	 
	  
	  
	  
	  
	  
	 </LinearLayout>
	 <TextView
            android:id="@+id/course_screen_groups_label"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:text="groups" 
            android:background="@drawable/ug_course_label_text_container"
    		android:layout_below="@id/course_screen_list_kdamim"
    		  android:layout_marginTop="5dp"
        
            
            />
	 
	<LinearLayout 
	    android:id="@+id/course_screen_groups_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_below="@id/course_screen_groups_label"
        android:orientation="vertical" 
        android:layout_marginBottom="10dp"
        android:background="@drawable/ug_course_group_view"
      >
	    
	</LinearLayout>

	    </LinearLayout>
	
    
    
	    </ScrollView>  
	    </RelativeLayout>
</RelativeLayout>