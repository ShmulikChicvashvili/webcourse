	<TextView
            android:id="@+id/course_screen_exam_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 19/10/2030 " 
            android:background="@drawable/ug_course_text_container"
            
            
            
            />
	
	<TextView
            android:id="@+id/ug_course_screen_examb_header"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="מועד ב" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
           
            />
	</LinearLayout>
	
	       <LinearLayout
