         <TextView
            android:id="@+id/course_screen_points"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4.0" 
            android:background="@drawable/ug_course_text_container"
            
            android:layout_gravity="right"
            
            />
         <TextView
            android:id="@+id/ug_course_screen_points_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="נק" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignTop="@+id/course_screen_points"
            />
        </LinearLayout>
         
         
         
        
