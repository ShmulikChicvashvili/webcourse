<LinearLayout
	    android:id="@+id/ug_course_screen_name_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:background="@drawable/ug_course_text_header_group_container"
        
         > 

<TextView
            android:id="@+id/course_screen_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="default for debug" 
            android:background="@drawable/ug_course_text_container"
			android:layout_toLeftOf="@+id/ug_course_screen_name_header"            
            />
<TextView
            android:id="@+id/ug_course_screen_name_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="שם קורס" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/course_screen_name"
            />
</LinearLayout>


<LinearLayout
	    android:id="@+id/ug_course_screen_number_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:background="@drawable/ug_course_text_header_group_container"
        
         > 

<TextView
            android:id="@+id/course_screen_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="233232" 
            android:background="@drawable/ug_course_text_container"
            
            
            />
<TextView
            android:id="@+id/ug_course_screen_number_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:singleLine="true"
            android:text="מספר קורס" 
            android:textColor="#ffffff"
            android:background="@drawable/ug_course_text_header_container"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/course_screen_name"
            />
</LinearLayout>


	<LinearLayout
	    android:id="@+id/course_screen_view_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_gravity="right"
          android:layout_marginTop="3dip"
        android:layout_below="@id/course_screen_name"
         > 
         
	    <LinearLayout
	    android:id="@+id/ug_course_screen_faculty_headline"
