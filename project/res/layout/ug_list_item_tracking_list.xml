<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
       
    <TextView
        android:id="@+id/ug_trackinglist_item_available_places"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:id="@+id/ug_trackinglist_item_course_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:layout_toRightOf="@+id/ug_trackinglist_item_available_places"
        android:gravity="center_horizontal"     
        /> 
    <TextView
	    android:id="@+id/ug_trackinglist_item_course_number"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="5dip"
	    android:layout_alignParentRight="true"
	    android:gravity="right"     
    /> 
    

</RelativeLayout>
