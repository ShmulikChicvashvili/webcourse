<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:orientation="vertical"
    android:paddingTop="@dimen/top_margin" >

  
    <LinearLayout
        android:id="@+id/rec_main_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="25dp"
        android:paddingTop="@dimen/top_margin"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="@drawable/techmind_recent_back"
        android:orientation="vertical"
        android:layout_gravity="center">
    
    <RelativeLayout
        android:id="@+id/rec_account_icons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/rec_account_posts_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="horizontal"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:weightSum="1.5" >

            <ImageView
                android:id="@+id/rec_account_icon_posts"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_weight="0.5"
                android:src="@drawable/techmind_compose" />

            <TextView
                android:id="@+id/rec_account_number_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="8sp"
                android:layout_weight="0.5"
                android:textColor="#ff8800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rec_account_posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8sp"
                android:layout_weight="0.5"
                android:text=" Posts"
                android:textColor="#ff8800"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rec_account_comments_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rec_account_posts_layout"
            android:orientation="horizontal"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:weightSum="1.5" >

            <ImageView
                android:id="@+id/rec_account_icon_comments"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_weight="0.5"
                android:src="@drawable/techmind_comment" />

            <TextView
                android:id="@+id/rec_account_number_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4sp"
                android:layout_marginTop="8sp"
                android:layout_weight="0.5"
                android:textColor="#ff8800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rec_account_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8sp"
                android:layout_weight="0.5"
                android:text=" Comments"
                android:textColor="#ff8800"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rec_account_likes_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rec_account_comments_layout"
            android:layout_alignTop="@+id/rec_account_comments_layout"
            android:layout_toRightOf="@id/rec_account_comments_layout"
            android:orientation="horizontal"
            android:weightSum="1.5" >

            <ImageView
                android:id="@+id/rec_account_icon_likes"
                android:layout_width="45sp"
                android:layout_height="45sp"
                android:layout_weight="0.5"
                android:src="@drawable/techmind_like" />

            <TextView
                android:id="@+id/rec_account_number_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8sp"
                android:layout_marginLeft="3sp"
                android:layout_weight="0.5"
                android:textColor="#ff8800"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/rec_account_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8sp"
                android:layout_weight="0.5"
                android:text=" Likes"
                android:textColor="#ff8800"
                android:textSize="14sp" />

        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:paddingTop="20dp" 
        android:paddingBottom="20dp"
        android:padding="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            <LinearLayout
        android:id="@+id/rec_account_total_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rec_account_tot"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You mined" />

        <TextView
            android:id="@+id/rec_account_current_total"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/activity_vertical_margin" />
    </LinearLayout>

            <LinearLayout
                android:id="@+id/rec_date_layout"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/techmind_date"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/rec_date_mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8sp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/rec_date_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15sp"
                    android:shadowColor="#000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textColor="#ff8800"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>
    
	</RelativeLayout>
	</LinearLayout>
    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginLeft="230dp"
        android:id="@+id/rec_account_piggy_my_title"
        android:clickable="true"
        android:onClick="mineNav"
        android:background="@drawable/piggybank" >

        <TextView
            android:id="@+id/rec_account_mine"
            style="@style/techmindMine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="mine" />

    </RelativeLayout>

</LinearLayout>