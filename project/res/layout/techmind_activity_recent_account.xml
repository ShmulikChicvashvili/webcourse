<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
        android:id="@+id/rec_account_total_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/rec_account_tot"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You mined:"
            android:gravity="center_horizontal"
            android:paddingRight="10dp" />

        <TextView
            android:id="@+id/rec_account_current_total"
            style="@style/techmindText"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
     </LinearLayout>
     
    

	    <LinearLayout
	        android:id="@+id/rec_account_posts_layout"
	       	android:layout_height="wrap_content"
	       	android:layout_width="wrap_content"
            android:paddingLeft="@dimen/left_margin"
            android:paddingTop="@dimen/top_margin"  
        	android:orientation="horizontal" >
			
			<TextView
	            android:id="@+id/rec_account_number_posts"
	            style="@style/techmindSubTitle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content" />

			<TextView
			    android:id="@+id/rec_account_rec_posts"
			    style="@style/techmindSubTitle"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text=" posts: " />
	
	        <TextView
	            android:id="@+id/rec_account_current_posts"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="@dimen/left_margin"
	            style="@style/techmindText" />
	        
    	</LinearLayout>
	
    <LinearLayout
        android:layout_width="wrap_content"        
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/left_margin" 
        android:paddingTop="10dp">
	        
      <TextView
            android:id="@+id/rec_account_number_comments"
            style="@style/techmindSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
      <TextView
          android:id="@+id/rec_account_recv_comments"
          style="@style/techmindSubTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text=" comments: " />
        <TextView
            android:id="@+id/rec_account_current_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            style="@style/techmindText"  />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rec_account_likes_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_margin" 
        android:orientation="horizontal" 
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/rec_account_number_likes"
            style="@style/techmindSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rec_account_rec_likes"
            style="@style/techmindSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" likes: " />

        <TextView
            android:id="@+id/rec_account_current_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_margin"
            style="@style/techmindText"/>
        
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rec_account_from_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/left_margin"
        android:paddingTop="@dimen/top_margin" >

        <TextView
            android:id="@+id/rec_account_from_title"
            style="@style/techmindSmallSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Last mine: " />

        <TextView
            android:id="@+id/rec_account_from_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            style="@style/techmindTextSmall"/>
    </LinearLayout>
      <RelativeLayout
          android:layout_width="fill_parent"
          android:layout_height="145dp"
          android:layout_centerHorizontal="true"
          android:layout_marginLeft="160dp"
          android:orientation="vertical" >

          <ImageView
              android:id="@+id/rec_account_piggy_my_title"
              android:layout_width="130dp"
              android:layout_height="130dp"
              android:layout_above="@+id/rec_account_mine"
              android:layout_alignParentRight="true"
              android:layout_alignParentTop="true"
              android:clickable="true"
              android:contentDescription="piggy"
              android:onClick="mineNav"
              android:src="@drawable/piggybank" />

          <TextView
              android:id="@+id/rec_account_mine"
              style="@style/techmindMine"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_centerHorizontal="true"
              android:text="mine" />
      </RelativeLayout>

</LinearLayout>