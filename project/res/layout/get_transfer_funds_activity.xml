<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
		
         <TextView
            android:id="@+id/get_transfer_funds_activity_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_transfer_funds_activity_product_name"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/get_transfer_funds_activity_enter_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="30sp" />
        
        <TextView
            android:id="@+id/get_transfer_funds_activity_buyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_transfer_funds_activity_buyer_name"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/get_transfer_funds_activity_enter_buyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/get_transfer_funds_activity_buyer_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_transfer_funds_activity_buyer_phone_number"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/get_transfer_funds_activity_enter_buyer_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/get_transfer_funds_activity_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_transfer_funds_activity_seller_name"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/get_transfer_funds_activity_enter_seller_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="32dp"
            android:inputType="textPersonName"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/get_transfer_funds_activity_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_transfer_funds_activity_amount"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/get_transfer_funds_activity_enter_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:height="32dp"
            android:inputType="number"
            android:textSize="30sp" />

        <Button
            android:id="@+id/get_transfer_funds_activity_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/get_transfer_funds_activity_btn"
            android:onClick="transferButtonWasPressed"
            android:textSize="25sp" />
    </LinearLayout>

</ScrollView>