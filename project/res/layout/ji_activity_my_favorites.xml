<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/ji_bg"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout 
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#e9e9e9">
       
    <TextView 
        android:id="@+id/textFavorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/apllyButton"
        android:layout_alignBottom="@id/apllyButton"
        android:padding="@dimen/dp7"
        android:textSize="20dp"
        android:text="Set your favorite categories"/>

    <ImageButton
        android:id="@+id/apllyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ji_navigation_accept"
        android:padding="@dimen/dp7"
        android:background="#00000000" />
     <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:layout_below="@id/apllyButton"
        android:background="@android:color/darker_gray"/>

        
    
    </RelativeLayout>
    
    
	<ListView
	  android:layout_width="fill_parent" 
	  android:layout_height="fill_parent" 
	  android:background="#00000000"
	  android:cacheColorHint="#00000000"
	  android:id="@+id/mainListView">
	</ListView>
	
</LinearLayout>