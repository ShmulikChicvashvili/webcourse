<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/am_list_item_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/am_list_item_bg" >

    <TextView
        android:id="@+id/am_list_item_due_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Due Date"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/secondary_text_dark_nodisable" />

    <TextView
        android:id="@+id/am_list_item_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/am_list_item_due_date"
        android:layout_marginBottom="5dp"
        android:text="H.W #"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/am_list_item_course_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/am_list_item_course_name"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/am_list_item_task"
        android:layout_marginRight="8dp"
        android:text="Course ID"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/secondary_text_dark_nodisable" />

    <TextView
        android:id="@+id/am_list_item_course_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/am_list_item_task"
        android:layout_toRightOf="@+id/am_list_item_course_id"
        android:text="Course Name"
        android:textAppearance="@android:style/TextAppearance.Small"
        android:textColor="@android:color/secondary_text_dark_nodisable" />

</RelativeLayout>