<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/get_welcome_activity_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/get_welcome_activity_random_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:text="Random List" />

        <com.devsmart.android.ui.HorizontalListView
            android:id="@+id/get_welcome_activity_random_list_view"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_alignLeft="@id/get_welcome_activity_random_list_title"
            android:layout_below="@id/get_welcome_activity_random_list_title" />

        <TextView
            android:id="@+id/get_welcome_activity_recent_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/get_welcome_activity_random_list_view"
            android:text="Recent List" />

        <com.devsmart.android.ui.HorizontalListView
            android:id="@+id/get_welcome_activity_recent_list_view"
            android:layout_width="match_parent"
            android:layout_height="200dip"
            android:layout_alignLeft="@id/get_welcome_activity_recent_list_title"
            android:layout_below="@id/get_welcome_activity_recent_list_title" />
        
    </RelativeLayout>

</ScrollView>