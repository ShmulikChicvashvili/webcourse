<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/score_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colorful"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/margin_left"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <ImageView
        android:id="@+id/score_board_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="@dimen/horizontal_space"
        android:src="@drawable/score_bord" />
    
    <LinearLayout
        android:id="@+id/level_pics"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@id/score_board_title"
        android:layout_marginLeft="@dimen/margin_sides"
        android:layout_marginTop="@dimen/horizontal_space"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/atudai"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/vertical_space"
            android:layout_weight="0.96"
            android:contentDescription="atudai pic"
            android:src="@drawable/atudai" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_marginRight="@dimen/vertical_space"
            android:layout_weight="1"
            android:contentDescription="cool nerd pic"
            android:scaleType="fitXY"
            android:src="@drawable/cool_nerd" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_marginRight="@dimen/vertical_space"
            android:layout_weight="1"
            android:contentDescription="soldier nerd pic"
            android:scaleType="fitXY"
            android:src="@drawable/soldier_nerd" />

        <ImageView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_weight="1"
            android:contentDescription=" super nerd pic"
            android:scaleType="fitXY"
            android:src="@drawable/super_nerd" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/level_stars"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@id/level_pics"
        android:layout_marginLeft="@dimen/margin_sides"
        android:weightSum="4" >

        <ImageView
            android:id="@+id/atudai_star"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/stars"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/cool_nerd_star"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/stars"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/solider_nerd_star"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/stars"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/super_nerd_star"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/vertical_space"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/stars"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/total_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/total"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/total"
        android:text="0"
        android:layout_marginBottom="10dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/level_title"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/level_title"
        android:text="ATUDAY"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_title"
        android:layout_below="@+id/level_title"
        android:layout_marginTop="26dp"
        android:scaleType="fitXY"
        android:src="@drawable/total" />



    <ImageView
        android:id="@+id/level_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/level_pics"
        android:layout_alignTop="@+id/level_pics"
        android:layout_marginTop="59dp"
        android:paddingTop="@dimen/horizontal_wide_space"
        android:src="@drawable/my_level" />

</RelativeLayout>