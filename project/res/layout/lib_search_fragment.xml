<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content" 
	>
 
	<EditText
		android:id="@+id/lib_search_data"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/lib_prompt_search"
		android:maxLines="1"
		android:singleLine="true" 
		android:imeActionId="@+id/search"
		android:imeActionLabel="@string/lib_action_search"
		android:imeOptions="actionSearch"
	/>

	<Button
		android:id="@+id/lib_search_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="right"
		android:layout_alignParentRight="true"
		android:layout_below="@id/lib_search_data"
		android:paddingLeft="32dp"
		android:paddingRight="32dp"
		android:text="@string/lib_action_search" 
	/>
  
      

</RelativeLayout>