<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
<com.technion.coolie.tecmind.CenterHorizontalScrollView 
  	    android:id="@+id/tot_scroll_layout"
  	    android:layout_width="wrap_content"
  	    android:layout_height="330dp"
  	    android:fillViewport="true"
  	     >
	        
    <LinearLayout
        android:id="@+id/tot_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1" 
        android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/tot_cntrs_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/tot_account_total_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tot_account_current_total"
                        style="@style/techmindTitleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/activity_vertical_margin" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tot_account_tot"
                    style="@style/techmindTitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/tot_account_total_layout"
                    android:text="You mined" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tot_account_icons_layout"
                android:layout_width="300dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/tot_account_posts_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:orientation="horizontal"
                    android:weightSum="1.5" >

                    <ImageView
                        android:id="@+id/tot_account_icon_posts"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_weight="0.5"
                        android:src="@drawable/techmind_compose" />

                    <TextView
                        android:id="@+id/tot_account_number_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="0.5"
                        android:textColor="#ff8800"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tot_account_posts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8sp"
                        android:layout_weight="0.5"
                        android:text=" Posts"
                        android:textColor="#ff8800"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tot_account_comments_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tot_account_posts_layout"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/top_margin"
                    android:weightSum="1.5" >

                    <ImageView
                        android:id="@+id/tot_account_icon_comments"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_weight="0.5"
                        android:src="@drawable/techmind_comment" />

                    <TextView
                        android:id="@+id/tot_account_number_comments"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8sp"
                        android:layout_weight="0.5"
                        android:textColor="#ff8800"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tot_account_comments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8sp"
                        android:layout_weight="0.5"
                        android:text=" Comments"
                        android:textColor="#ff8800"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tot_account_likes_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tot_account_comments_layout"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/top_margin"
                    android:weightSum="1.5" >

                    <ImageView
                        android:id="@+id/tot_account_icon_likes"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_weight="0.5"
                        android:src="@drawable/techmind_like" />

                    <TextView
                        android:id="@+id/tot_account_number_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="3sp"
                        android:layout_marginTop="8sp"
                        android:layout_weight="0.5"
                        android:textColor="#ff8800"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/tot_account_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="8sp"
                        android:layout_weight="0.5"
                        android:text=" Likes"
                        android:textColor="#ff8800"
                        android:textSize="22sp" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tot_graph_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin" >

            <LinearLayout
                android:id="@+id/bla"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
			    android:paddingBottom="@dimen/activity_vertical_margin"
			    android:paddingLeft="@dimen/activity_horizontal_margin"
			    android:paddingRight="@dimen/activity_horizontal_margin"
			    android:paddingTop="@dimen/activity_vertical_margin" >

	                <ImageView
	                    android:layout_width="45sp"
	                    android:layout_height="45sp"
	                    android:src="@drawable/techmind_like" />
	
	                <ImageView
	                    android:id="@+id/blaaa"
	                    android:layout_width="45sp"
	                    android:layout_height="45sp"
	                    android:src="@drawable/techmind_like" />
	
	                <ImageView
	                    android:id="@+id/blaaaa"
	                    android:layout_width="45sp"
	                    android:layout_height="45sp"
	                    android:src="@drawable/techmind_like" />
	
	                <ImageView
	                    android:id="@+id/blaa"
	                    android:layout_width="45sp"
	                    android:layout_height="45sp"
	                    android:src="@drawable/techmind_like" />

        		</LinearLayout>
		    </LinearLayout>
        </LinearLayout>
	</com.technion.coolie.tecmind.CenterHorizontalScrollView>

	    
</LinearLayout>