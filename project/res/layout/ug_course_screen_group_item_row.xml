<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linLayoutboss"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
       android:orientation="horizontal" 
    >
  
   
    
    <TextView
		android:id="@+id/ug_course_display_group_location"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		
		android:text="הומניסטים 1"
	android:gravity="center_horizontal"
	android:layout_weight="5"
   />
    <TextView
		android:id="@+id/ug_course_display_group_hour_end"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		
		android:text="14:3"
android:gravity="right"
	android:layout_weight="3"
   />
    <TextView
		android:id="@+id/ug_course_display_group_hour_start"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		
		
		android:text="10:3"
	android:gravity="right"
	android:layout_weight="3"
   />
    <TextView
		android:id="@+id/ug_course_display_group_day"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:gravity="center_horizontal"
		android:text=""
	android:layout_weight="2"
   />
    <TextView
		android:id="@+id/ug_course_display_group_lecturer"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		
		android:text=""
		android:gravity="center_horizontal"
	android:layout_weight="5"
   />
    <TextView
		android:id="@+id/ug_course_display_group_meeting_type"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		
		android:text=""
		android:gravity="right"
	android:layout_weight="3"
   />
    
     <TextView
		android:id="@+id/ug_course_display_group_free_spaces"
		android:layout_width="0dip"
		android:layout_height="wrap_content"

		android:text=""
	android:gravity="center"
	android:layout_weight="3"
   />
     
    <TextView
		android:id="@+id/ug_course_display_group_number"
		android:layout_width="0dip"
		android:layout_height="wrap_content"
		android:singleLine="true"
		android:text=""
		android:gravity="right"
	android:layout_weight="1"
   />
    
   
</LinearLayout>