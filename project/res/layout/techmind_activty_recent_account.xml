<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rec_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="5" >

    <TextView
        android:id="@+id/title"
        style="@style/techmindTitleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Summary of your Account details"
        android:paddingBottom="100dp"
        android:paddingTop="100dp"
        android:gravity="center" />

    <RelativeLayout
        android:id="@+id/posts_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >
    <TextView
            android:id="@+id/number_posts"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/rec_posts"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="posts: " 
            android:layout_toRightOf="@id/number_posts"/>

        <TextView
            android:id="@+id/current_posts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rec_posts" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin" >
      <TextView
            android:id="@+id/number_comments"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/r_comments"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comments: " 
             android:layout_toRightOf="@id/number_comments"/>

        <TextView
            android:id="@+id/current_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/r_comments" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/likes_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/number_likes"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/rec_likes"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/number_likes"
            android:text="likes: " />

        <TextView
            android:id="@+id/current_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rec_likes" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/total_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin" >

        <TextView
            android:id="@+id/tot"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your total techions :" />

        <TextView
            android:id="@+id/current_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tot" />
    </RelativeLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="right"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="12dp"
        android:contentDescription="piggy"
        android:src="@drawable/piggybank" />

</LinearLayout>