<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tot_layout_counters_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
            <LinearLayout
                android:id="@+id/tot_account_total_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
               android:orientation="horizontal" >

            <TextView
                android:id="@+id/tot_account_tot"
                style="@style/techmindTitleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total " />
                <TextView
                    android:id="@+id/tot_account_current_total"
                    style="@style/techmindTitleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingTop="@dimen/activity_vertical_margin" />
            </LinearLayout>
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:id="@+id/tot_posts_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="20dp">

            <RelativeLayout
                android:id="@+id/post_bar"
                android:layout_width="30dp"
                android:layout_height="155dp"
                android:background="@drawable/techmind_white_bar" >

                <RelativeLayout
                    android:id="@+id/post_blue_bar"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/techmind_blue_bar" 
                    android:orientation="vertical">"
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tot_account_posts_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_bar"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/tot_account_icon_posts"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_weight="0.5"
                    android:src="@drawable/techmind_compose" />

                <TextView
                    android:id="@+id/tot_account_number_posts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:textColor="#ff8800"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tot_comments_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tot_posts_layout"
            android:paddingLeft="20dp"
            android:paddingRight="20dp" >

            <RelativeLayout
                android:id="@+id/comment_bar"
                android:layout_width="30dp"
                android:layout_height="155dp"
                android:background="@drawable/techmind_white_bar" >

                <RelativeLayout
                    android:id="@+id/comment_blue_bar"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/techmind_blue_bar" >
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tot_account_comments_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/comment_bar"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/tot_account_icon_comments"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_weight="0.5"
                    android:src="@drawable/techmind_comment" />

                <TextView
                    android:id="@+id/tot_account_number_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:textColor="#ff8800"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tot_likes_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tot_comments_layout"
            android:paddingLeft="20dp"  
            android:paddingRight="15dp"  >

            <RelativeLayout
                android:id="@+id/like_bar"
                android:layout_width="30dp"
                android:layout_height="155dp"
                android:background="@drawable/techmind_white_bar" >

                <RelativeLayout
                    android:id="@+id/like_blue_bar"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/techmind_blue_bar" >
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/tot_account_likes_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/like_bar"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:weightSum="1" >

                <ImageView
                    android:id="@+id/tot_account_icon_likes"
                    android:layout_width="30sp"
                    android:layout_height="30sp"
                    android:layout_weight="0.5"
                    android:src="@drawable/techmind_like" />

                <TextView
                    android:id="@+id/tot_account_number_likes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="0.5"
                    android:textColor="#ff8800"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>