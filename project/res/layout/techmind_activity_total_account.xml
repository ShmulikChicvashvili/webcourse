<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tot_tab_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yellow"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/total_title"
        style="@style/techmindTitleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingTop="20dp"
        android:text="You mined:" />

    <RelativeLayout
        android:id="@+id/total_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/total_data"
            style="@style/techmindTitleSmall"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Techions" 
             android:layout_alignBottom="@id/total_data"
            android:layout_toRightOf="@id/total_data"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/from_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/from_title"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="from: " />

        <TextView
            android:id="@+id/from_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/from_title"
            android:layout_toRightOf="@id/from_title" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/to_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <TextView
            android:id="@+id/to_title"
            style="@style/techmindTitleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="to:" />

        <TextView
            android:id="@+id/to_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/to_title"
            android:layout_toRightOf="@id/to_title" />
    </RelativeLayout>

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="right"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="12dp"
        android:contentDescription="piggy"
        android:src="@drawable/piggybank" />

</LinearLayout>