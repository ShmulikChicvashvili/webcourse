<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/get_transactions_tabstrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/get_transactions_my_sales_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/get_transactions_my_sales" />

        <TextView
            android:id="@+id/get_transactions_my_purchases_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/get_transactions_my_purchases" />

        <TextView
            android:id="@+id/get_transactions_my_products_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="@string/get_transactions_my_products" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/get_transactions_pager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/get_transactions_tabstrip" >
    </android.support.v4.view.ViewPager>

</RelativeLayout>