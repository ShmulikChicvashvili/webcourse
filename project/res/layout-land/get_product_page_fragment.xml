<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/get_prodcut_page_layout_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/get_product_page_fragment_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/get_product_page_fragment_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="center"
            android:src="@drawable/get_actionbar_menu_logo" />

        <TextView
            android:id="@+id/get_product_page_fragment_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/get_product_page_fragment_sms_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_transactions_fragment_sms" />

            <Button
                android:id="@+id/get_product_page_fragment_call_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/get_transactions_fragment_call" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/get_product_page_fragment_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8sp"
                android:layout_marginTop="48sp"
                android:gravity="center"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/get_product_page_fragment_description_screen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="8sp"
                    android:layout_marginTop="4sp"
                    android:gravity="center"/>
            </ScrollView>
        </LinearLayout>

        <Button
            android:id="@+id/get_product_page_fragment_buy_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/get_product_buy_button" />
    </LinearLayout>

</LinearLayout>