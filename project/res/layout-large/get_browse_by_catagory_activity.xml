<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/get_search_result_screen_activity_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <fragment
        android:id="@+id/productFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5"
        class="com.technion.coolie.techtrade.ProductFragment" />

    <fragment
        android:id="@+id/browseByCatagoryListViewFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        class="com.technion.coolie.techtrade.ProductListFragment" />

    <fragment
        android:id="@+id/browseByCatagorySearchBoxFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        class="com.technion.coolie.techtrade.SearchBoxFragment" />

</LinearLayout>