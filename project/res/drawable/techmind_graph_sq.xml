        <shape android:shape="rectangle" >
            <solid android:color="#E7E7E7" />
            <corners android:bottomRightRadius="2dp" android:bottomLeftRadius="2dp"
					 android:topLeftRadius="2dp" android:topRightRadius="2dp"/>
        </shape>
    </item>
     <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
